{% block book_form_modal %}
	<template>
		<div class="template-content">
			<div class="container">
				<h1>Редактирование книги</h1>
				<form id="book-form" class="needs-validation" novalidate>
					<div class="row">
						<div
							class="col-md-6">
							<!-- Text Fields -->
							<div class="form-group">
								<label for="name">Book Name*</label>
								<input type="text" class="form-control" id="name" required>
								<div class="invalid-feedback">Please provide a book name.</div>
							</div>

							<div class="form-group">
								<label for="author">Author*</label>
								<input type="text" class="form-control" id="author" required>
								<div class="invalid-feedback">Please provide an author.</div>
							</div>

							<div class="form-group">
								<label for="read_date">Read Date</label>
								<input type="date" class="form-control" id="read_date">
							</div>

							<!-- PDF File Upload -->
							<div class="form-group">
								<label for="bookFile">Book File (PDF)</label>
								<div class="custom-file">
									<input type="file" class="custom-file-input" id="bookFile" accept="application/pdf">
									<label class="custom-file-label" for="bookFile">Choose PDF file</label>
								</div>
							</div>
							<div class="form-check mb-3">
								<input type="checkbox" class="form-check-input" id="allow_download">
								<label class="form-check-label" for="allow_download">Allow Download</label>
							</div>
						</div>

						<div
							class="col-md-6">
							<!-- Cover Image Section -->
							<div class="form-group">
								<label>Book Cover</label>
								<div class="cover-preview mb-3">
									<img id="cover-preview" src="https://placehold.co/600x400" class="img-thumbnail" style="max-height: 200px;">
								</div>
								<div class="custom-file">
									<input type="file" class="custom-file-input" id="coverFile" accept="image/png,image/jpeg">
									<label class="custom-file-label" for="coverFile">Choose cover image (PNG/JPEG)</label>
								</div>
							</div>


						</div>
					</div>

					<button type="submit" class="btn btn-primary">Save Book</button>
				</form>
			</div>
		</div>
	<script>
		{% include "main/bookForm_handler.js.twig" %}
	</script>
	</template>
{% endblock %}
